# Application Laravel
APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://laravel.localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de données
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=<votre_utilisateur_db>
DB_PASSWORD=<votre_mot_de_passe_db>
DB_ROOT_PASSWORD=<votre_mot_de_passe_root_mysql>

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false

# Loki
LOKI_RETENTION_PERIOD=24h
LOKI_STORAGE_DIR=/loki

# Cache et Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Autres services peuvent être ajoutés ici 